{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
        ],
        "lib": [
            "dom",
            "es2015"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "name": "vue-ts-plugin"
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}